generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model admins {
  login_id   String   @id           // Primary key
  password   String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Credit {
  id         Int      @id @default(autoincrement())
  type       String
  credits    Int
  updated_at DateTime @updatedAt

  @@map("credits") // explicitly map model to "credits" table
}

model Video {
  id           Int    @id @default(autoincrement())
  title        String
  description  String
  video_id     String @unique
  video_url     String
  thumbnail_url String

  @@map("videos")
}

model Ticket {
  id           Int      @id @default(autoincrement())
  ticket_number String  @unique
  type         String   // "General Request" or "Application Issue / Bug" or "Digital Card Change Request"
  title        String
  description  String   @db.Text
  reported_by  String
  email        String
  phone        String
  file_url     String?  // Optional file attachment URL
  file_name    String?  // Original filename
  status       String   @default("open") // open, in_progress, resolved, closed
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt

  @@map("tickets")
}

model DigitalCard {
  id                     Int      @id @default(autoincrement())
  class_id               String   @unique
  program                String
  site                   String
  class_type             String
  start_date             DateTime
  end_date               DateTime
  accrediting_instructor String
  assisting_instructor   String?
  open_enrollment        Boolean  @default(false)

  // Locking fields
  is_locked              Boolean  @default(false)
  submitted_at           DateTime?
  submitted_by           String?  // User email or ID

  // Credit tracking
  credits_used           Int

  // Relationships
  students               DigitalCardStudent[]

  created_at             DateTime @default(now())
  updated_at             DateTime @updatedAt

  @@map("digital_cards")
}

model DigitalCardStudent {
  id              Int         @id @default(autoincrement())
  digital_card_id Int
  digital_card    DigitalCard @relation(fields: [digital_card_id], references: [id], onDelete: Cascade)

  first_name      String
  last_name       String
  email           String
  certificate_url String?     // Path to generated certificate PDF

  created_at      DateTime    @default(now())

  @@map("digital_card_students")
}

model SavedCard {
  id              Int      @id @default(autoincrement())
  user_email      String   // User's email address
  card_last_four  String   // Last 4 digits of card number
  card_type       String   // Visa, Mastercard, Amex, Discover, etc.
  cardholder_name String   // Name on card
  expiry_month    String   // MM format
  expiry_year     String   // YY format
  is_default      Boolean  @default(false)
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt

  @@map("saved_cards")
  @@index([user_email])
}

model User {
  id         Int      @id @default(autoincrement())
  username   String   @unique
  password   String   // Hashed password
  role       String   // "admin" or "instructor"
  full_name  String?  // Optional full name
  email      String?  // Optional email for notifications
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("users")
  @@index([username])
}

